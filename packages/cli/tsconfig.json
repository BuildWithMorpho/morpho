{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "dist",
    "strict": false,
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "jsxImportSource": "@builder.io/morpho",
    "paths": {
      "@builder.io/morpho": ["../core/src"]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "ts-node": {
    "typeCheck": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
