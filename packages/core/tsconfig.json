    "lib": ["es7", "dom", "esnext", "esnext.asynciterable"],
    "composite": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "@builder.io/morpho": ["./src"]
    }
  },
  "include": ["./src", "./typings.d.ts"],
  "exclude": ["src/**/builder-*.raw.tsx"]
}
